$noise = osc_noise(0.25)
$lp = lp(4400, 0.9, 0.005)
$out = out()

a($lp)
a($noise)
a($out)
j($out, $lp)

$i = 1 while ($i <= 64) {
    $comb = comb($i * 32, 0.996, 0.1)
    $bp = bp($i * 64, 0.999, 0.1)
	a($comb)
	a($bp)
    j($comb, $noise)
    j($bp, $comb)
    j($lp, $bp)
    $i * 1.61834
}

$v = vis_fft()
j($v, $lp)

run($out)

while (1) {
    $v.render($v)
    lfo1($lp, "Freq")
    ar($noise, "Amp")

    while(get_event()) {
        if EVT[ EVT_TYPE ] == EVT_QUIT {
            Embe.shut = 1
        }
    }

    if Embe.shut {
        shut()
        halt    
    }
}
