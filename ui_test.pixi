include "ui.pixi"

//$screen = set_screen(GL_SCREEN)
$screen = get_screen()

SCREEN_W = get_xsize($screen)
SCREEN_H = get_ysize($screen)
PAD = 8

$ui = UI()
$canvas = $ui.Canvas(0, PAD, PAD, SCREEN_W - 2 * PAD, SCREEN_H - 2 * PAD, WHITE)
$push1 = $ui.Push($canvas, 16, 16, 16, 16, RED)
$push2 = $ui.Push($canvas, 40, 16, 16, 16, GREEN)

while( 1 ) { 
    $ui.draw($canvas)
    $ui.draw($push1)
    $ui.draw($push2)
    while( get_event() ) { if EVT[ EVT_TYPE ] == EVT_QUIT { break2 } }
    frame() 
}

